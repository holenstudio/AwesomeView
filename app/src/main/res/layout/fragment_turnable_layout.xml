<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    tools:context="com.holenstudio.awesomeview.MainActivity">

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.holenstudio.awesomeview.view.TurntableLayout
        android:id="@+id/turntable_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:arrowPosition="90"
        app:arrowSrc="@drawable/arrow_to_left"
        app:radius="100.0"></com.holenstudio.awesomeview.view.TurntableLayout>


</LinearLayout>
